{
  "hosting": {
    "public": "dist/san-sanych-mustache",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "firebase.rules"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
